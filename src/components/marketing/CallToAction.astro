---
// Call-to-action section for landing page
import { ROUTES } from '../../config/constants';

const baseUrl = import.meta.env.BASE_URL;
const appUrl = `${baseUrl}${ROUTES.APP}`.replace(/\/+/g, '/');
---

<section class="text-center bg-blue-50 rounded-lg p-12 mb-16">
  <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to get started?</h2>
  <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
    Resize, convert, and optimize your images right in your browser. No sign-up required.
  </p>
  <a
    href={appUrl}
    class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold text-lg px-8 py-4 rounded-lg transition-colors shadow-lg hover:shadow-xl"
  >
    Launch App â†’
  </a>
</section>
