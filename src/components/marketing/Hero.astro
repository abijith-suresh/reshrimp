---
// Hero section for landing page
import { ROUTES } from '../../config/constants';

const baseUrl = import.meta.env.BASE_URL;
const appUrl = `${baseUrl}${ROUTES.APP}`.replace(/\/+/g, '/');
---

<section class="text-center mb-16">
  <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">Privacy-First Image Processing</h1>
  <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
    Process your images directly in your browser. No uploads. No tracking. No limits.
  </p>
  <a
    href={appUrl}
    class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold text-lg px-8 py-4 rounded-lg transition-colors shadow-lg hover:shadow-xl"
  >
    Start Processing Images â†’
  </a>
</section>
