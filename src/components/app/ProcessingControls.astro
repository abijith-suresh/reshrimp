    opacity: 0.4;
    pointer-events: none;
    filter: grayscale(0.3);
  }

  .sp-slider {
    width: 100%;
    height: 6px;
    border-radius: 3px;
    appearance: none;
    -webkit-appearance: none;
    background: var(--sp-border-light);
    cursor: pointer;
  }

  .sp-slider::-webkit-slider-thumb {
    appearance: none;
    -webkit-appearance: none;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--sp-coral);
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(255, 107, 107, 0.3);
  }

  .sp-slider::-moz-range-thumb {
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--sp-coral);
    border: none;
