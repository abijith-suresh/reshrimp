---
// Image preview component showing before and after
---

<div id="preview-container" class="sp-preview hidden">
  <h3 class="sp-preview-title">Preview</h3>

  <div class="sp-preview-grid">
    <!-- Original Image -->
    <div class="sp-preview-col">
      <span class="pop-chip pop-chip-coral sp-preview-label">Original</span>
      <div class="sp-preview-frame">
        <img id="original-preview" alt="Original" class="sp-preview-img" />
      </div>
      <div id="original-info" class="sp-preview-info">
        <p id="original-dimensions"></p>
        <p id="original-size"></p>
      </div>
    </div>

    <!-- Processed Image -->
    <div class="sp-preview-col">
      <span class="pop-chip pop-chip-mint sp-preview-label">Processed</span>
      <div class="sp-preview-frame">
        <div id="processed-placeholder" class="sp-preview-placeholder">
          <svg class="sp-placeholder-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <p class="sp-placeholder-text">Click "Process Image" to see result</p>
        </div>
        <img id="processed-preview" alt="Processed" class="sp-preview-img hidden" />
      </div>
      <div id="processed-info" class="sp-preview-info hidden">
        <p id="processed-dimensions"></p>
        <p id="processed-size"></p>
        <p id="size-difference"></p>
      </div>
    </div>
  </div>

  <!-- Error Display -->
  <div id="error-message" class="sp-error hidden">
    <div class="sp-error-inner">
      <svg class="sp-error-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <h3 class="sp-error-title">Processing Error</h3>
        <p id="error-text" class="sp-error-text"></p>
      </div>
    </div>
  </div>
</div>

<style>
  .sp-preview {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .sp-preview.hidden {
    display: none;
  }

  .sp-preview-title {
    font-family: var(--sp-font-display);
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0;
  }

  .sp-preview-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .sp-preview-col {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .sp-preview-label {
    align-self: flex-start;
  }

  .sp-preview-frame {
    background: var(--sp-bg-card);
    border: 1px solid var(--sp-border);
    border-radius: var(--sp-radius-xl);
    overflow: hidden;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--sp-shadow);
  }

  .sp-preview-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .sp-preview-placeholder {
    text-align: center;
    color: var(--sp-text-soft);
  }

  .sp-placeholder-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto 0.5rem;
    color: var(--sp-lavender);
    opacity: 0.5;
  }

  .sp-placeholder-text {
    font-size: 0.85rem;
    margin: 0;
  }

  .sp-preview-info {
    font-size: 0.8rem;
    color: var(--sp-text-muted);
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .sp-preview-info p {
    margin: 0;
  }

  .sp-error {
    background: var(--sp-coral-light);
    border: 1px solid rgba(255, 107, 107, 0.2);
    border-radius: var(--sp-radius);
    padding: 1rem 1.25rem;
  }

  .sp-error.hidden {
    display: none;
  }

  .sp-error-inner {
    display: flex;
    gap: 0.75rem;
  }

  .sp-error-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--sp-coral);
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .sp-error-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sp-coral-dark);
    margin: 0 0 0.25rem;
  }

  .sp-error-text {
    font-size: 0.85rem;
    color: var(--sp-coral);
    margin: 0;
  }

  @media (max-width: 640px) {
    .sp-preview-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
