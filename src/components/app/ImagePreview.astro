---
// Image preview component showing before and after
---

<div id="preview-container" class="space-y-6 hidden">
  <h3 class="text-lg font-semibold text-gray-900">Preview</h3>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Original Image -->
    <div class="space-y-2">
      <h4 class="text-sm font-medium text-gray-700">Original</h4>
      <div
        class="border border-gray-300 rounded-lg overflow-hidden bg-gray-100 aspect-square flex items-center justify-center"
      >
        <img id="original-preview" alt="Original" class="max-w-full max-h-full object-contain" />
      </div>
      <div id="original-info" class="text-xs text-gray-600 space-y-1">
        <p id="original-dimensions"></p>
        <p id="original-size"></p>
      </div>
    </div>

    <!-- Processed Image -->
    <div class="space-y-2">
      <h4 class="text-sm font-medium text-gray-700">Processed</h4>
      <div
        class="border border-gray-300 rounded-lg overflow-hidden bg-gray-100 aspect-square flex items-center justify-center"
      >
        <div id="processed-placeholder" class="text-gray-400 text-center">
          <svg class="mx-auto h-12 w-12 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <p class="text-sm">Click "Process Image" to see result</p>
        </div>
        <img
          id="processed-preview"
          alt="Processed"
          class="max-w-full max-h-full object-contain hidden"
        />
      </div>
      <div id="processed-info" class="text-xs text-gray-600 space-y-1 hidden">
        <p id="processed-dimensions"></p>
        <p id="processed-size"></p>
        <p id="size-difference" class="font-medium"></p>
      </div>
    </div>
  </div>

  <!-- Error Display -->
  <div id="error-message" class="hidden">
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Processing Error</h3>
          <p id="error-text" class="text-sm text-red-700 mt-1"></p>
        </div>
      </div>
    </div>
  </div>
</div>
