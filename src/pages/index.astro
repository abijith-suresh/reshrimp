---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/marketing/Hero.astro';
import Features from '../components/marketing/Features.astro';
import CallToAction from '../components/marketing/CallToAction.astro';
---

<Layout title="Reshrimp - Privacy-First Image Processing">
  <main class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <!-- Hero Section -->
      <Hero />

      <!-- Features Section -->
      <Features />

      <!-- Call to Action -->
      <CallToAction />

      <!-- Footer Info -->
      <footer class="text-center text-sm text-gray-500">
        <p class="mb-2">Powered by the Canvas API • Open source • No data collection</p>
        <p>
          <a
            href="https://github.com/abijithanikkuruthi/reshrimp"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:text-blue-700"
          >
            View on GitHub
          </a>
        </p>
      </footer>
    </div>
  </main>
</Layout>
