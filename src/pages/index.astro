---
import Layout from '../layouts/Layout.astro';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import FloatingShapes from '../components/shared/FloatingShapes.astro';
import SectionHeader from '../components/shared/SectionHeader.astro';
import { ROUTES } from '../config/constants';

const baseUrl = import.meta.env.BASE_URL;
function makeHref(path: string): string {
  return `${baseUrl}${path}`.replace(/\/+/g, '/');
}
---

<Layout title="Reshrimp — Your Images Deserve Better">
  <div class="page-pop">
    <FloatingShapes />
    <Header currentPath="/" />

    <main transition:animate="fade">
      <!-- Hero -->
      <section class="hero-pop">
        <div class="hero-pop-container">
          <div class="hero-pop-chips">
            <span class="pop-chip pop-chip-mint">Free forever</span>
            <span class="pop-chip pop-chip-coral">100% private</span>
            <span class="pop-chip pop-chip-lavender">Works offline</span>
          </div>
          <h1 class="hero-pop-title">
            Your images deserve<br />
            <span class="hero-pop-highlight">better than the cloud.</span>
          </h1>
          <p class="hero-pop-sub">
            Resize, convert, and compress images right in your browser. Nothing gets uploaded.
            Nothing gets tracked. It just works.
          </p>
          <div class="hero-pop-cta-row">
            <a href={makeHref(ROUTES.APP)} class="cta-pop">
              Start processing
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="cta-pop-arrow"
              >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
            <span class="hero-pop-hint">No sign-up &middot; No downloads</span>
          </div>
        </div>
      </section>

      <!-- Bento Features -->
      <section class="bento-pop">
        <div class="bento-pop-container">
          <SectionHeader label="What can you do?" title="Everything you need. Nothing you don't." />
          <div class="bento-grid">
            <div class="bento-card bento-card-lg bento-coral">
              <div class="bento-card-content">
                <span class="bento-emoji">&#9986;</span>
                <h3 class="bento-title">Resize with precision</h3>
                <p class="bento-desc">
                  Scale to exact pixel dimensions. Aspect ratio lock keeps everything balanced.
                  Works for thumbnails, social media, or high-res exports.
                </p>
              </div>
            </div>
            <div class="bento-card bento-mint">
              <div class="bento-card-content">
                <span class="bento-emoji">&#128260;</span>
                <h3 class="bento-title">Convert formats</h3>
                <p class="bento-desc">
                  Switch between JPEG, PNG, and WebP in a click. Browser-native encoding, zero
                  quality loss.
                </p>
              </div>
            </div>
            <div class="bento-card bento-lavender">
              <div class="bento-card-content">
                <span class="bento-emoji">&#128200;</span>
                <h3 class="bento-title">Compress smartly</h3>
                <p class="bento-desc">
                  Fine-tune quality from 0-100%. Watch file sizes shrink live with side-by-side
                  preview.
                </p>
              </div>
            </div>
            <div class="bento-card bento-card-lg bento-yellow">
              <div class="bento-card-content">
                <span class="bento-emoji">&#128274;</span>
                <h3 class="bento-title">Completely private</h3>
                <p class="bento-desc">
                  All processing happens locally via the Canvas API. Zero servers, zero uploads,
                  zero tracking. Works offline after first load. Open source — verify it yourself.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- How it works -->
      <section class="how-pop">
        <div class="how-pop-container">
          <SectionHeader label="Dead simple" title="Three steps. Seriously." />
          <div class="how-pop-steps">
            <div class="how-pop-step">
              <div class="how-pop-num-wrap how-pop-num-coral">
                <span class="how-pop-num">1</span>
              </div>
              <h3 class="how-pop-step-title">Drop your image</h3>
              <p class="how-pop-step-desc">
                Drag and drop or click to browse. Supports JPEG, PNG, WebP, and GIF.
              </p>
            </div>
            <div class="how-pop-connector">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none">
                <path
                  d="M0 12h36M30 6l6 6-6 6"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  opacity="0.3"></path>
              </svg>
            </div>
            <div class="how-pop-step">
              <div class="how-pop-num-wrap how-pop-num-mint">
                <span class="how-pop-num">2</span>
              </div>
              <h3 class="how-pop-step-title">Tweak the settings</h3>
              <p class="how-pop-step-desc">
                Set dimensions, pick a format, adjust quality. Preview updates live.
              </p>
            </div>
            <div class="how-pop-connector">
              <svg width="40" height="24" viewBox="0 0 40 24" fill="none">
                <path
                  d="M0 12h36M30 6l6 6-6 6"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  opacity="0.3"></path>
              </svg>
            </div>
            <div class="how-pop-step">
              <div class="how-pop-num-wrap how-pop-num-lavender">
                <span class="how-pop-num">3</span>
              </div>
              <h3 class="how-pop-step-title">Download instantly</h3>
              <p class="how-pop-step-desc">
                One click to process, one click to download. Compare before and after.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Trust banner -->
      <section class="trust-pop">
        <div class="trust-pop-container">
          <div class="trust-pop-card">
            <div class="trust-pop-icon">
              <svg
                width="36"
                height="36"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                <path d="M9 12l2 2 4-4"></path>
              </svg>
            </div>
            <h2 class="trust-pop-title">Your images stay on your device. Period.</h2>
            <p class="trust-pop-desc">
              Reshrimp uses your browser's built-in Canvas API for all processing. There are no
              servers to upload to, no accounts to create, no data to collect. It's open source —
              check the code yourself.
            </p>
            <div class="trust-pop-badges">
              <span class="trust-badge">No servers</span>
              <span class="trust-badge">No cookies</span>
              <span class="trust-badge">No analytics</span>
              <span class="trust-badge">No accounts</span>
              <span class="trust-badge">Open source</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Final CTA -->
      <section class="final-pop">
        <div class="final-pop-container">
          <h2 class="final-pop-title">Ready to give it a go?</h2>
          <p class="final-pop-desc">
            Free, open source, completely private. Just open the app and start processing.
          </p>
          <a href={makeHref(ROUTES.APP)} class="cta-pop cta-pop-lg">
            Open Reshrimp
            <svg
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="cta-pop-arrow"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>

<style>
  .page-pop {
    position: relative;
    overflow-x: hidden;
    min-height: 100vh;
  }

  /* Hero */
  .hero-pop {
    padding: 5rem 2rem 4rem;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-pop-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-pop-chips {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    opacity: 0;
    animation: popBounceIn 0.6s 0.1s forwards;
  }

  .hero-pop-title {
    font-family: var(--sp-font-display);
    font-size: clamp(2.2rem, 5.5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.15;
    margin: 0 0 1.5rem;
    letter-spacing: -0.03em;
    opacity: 0;
    animation: popBounceIn 0.6s 0.25s forwards;
  }

  .hero-pop-highlight {
    background: linear-gradient(135deg, var(--sp-coral), var(--sp-lavender-dark));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-pop-sub {
    font-size: 1.1rem;
    color: var(--sp-text-muted);
    line-height: 1.7;
    max-width: 520px;
    margin: 0 auto 2rem;
    opacity: 0;
    animation: popBounceIn 0.6s 0.4s forwards;
  }

  .hero-pop-cta-row {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
    animation: popBounceIn 0.6s 0.55s forwards;
  }

  .hero-pop-hint {
    font-size: 0.8rem;
    color: var(--sp-text-soft);
  }

  /* Bento Grid */
  .bento-pop {
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .bento-pop-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .bento-card {
    border-radius: var(--sp-radius-xl);
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: var(--sp-shadow);
    border: 1px solid transparent;
  }

  .bento-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--sp-shadow-hover);
  }

  .bento-coral {
    background: var(--sp-coral-light);
    border-color: rgba(255, 107, 107, 0.15);
  }

  .bento-mint {
    background: var(--sp-mint-light);
    border-color: rgba(45, 212, 191, 0.15);
  }

  .bento-lavender {
    background: var(--sp-lavender-light);
    border-color: rgba(167, 139, 250, 0.15);
  }

  .bento-yellow {
    background: var(--sp-yellow-light);
    border-color: rgba(253, 230, 138, 0.3);
  }

  .bento-emoji {
    font-size: 2rem;
    display: block;
    margin-bottom: 1rem;
  }

  .bento-title {
    font-family: var(--sp-font-display);
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
  }

  .bento-desc {
    font-size: 0.9rem;
    color: var(--sp-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  /* How it works */
  .how-pop {
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .how-pop-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .how-pop-steps {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 1rem;
  }

  .how-pop-step {
    flex: 1;
    text-align: center;
    max-width: 220px;
  }

  .how-pop-num-wrap {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .how-pop-num-coral {
    background: var(--sp-coral);
    color: #fff;
  }

  .how-pop-num-mint {
    background: var(--sp-mint);
    color: #fff;
  }

  .how-pop-num-lavender {
    background: var(--sp-lavender);
    color: #fff;
  }

  .how-pop-num {
    font-family: var(--sp-font-display);
    font-size: 1.2rem;
    font-weight: 700;
  }

  .how-pop-connector {
    color: var(--sp-text-soft);
    padding-top: 1rem;
    flex-shrink: 0;
  }

  .how-pop-step-title {
    font-family: var(--sp-font-display);
    font-size: 1.05rem;
    font-weight: 700;
    margin: 0 0 0.4rem;
  }

  .how-pop-step-desc {
    font-size: 0.85rem;
    color: var(--sp-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  /* Trust */
  .trust-pop {
    padding: 3rem 2rem;
    position: relative;
    z-index: 1;
  }

  .trust-pop-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .trust-pop-card {
    background: var(--sp-bg-card);
    border: 1px solid var(--sp-border);
    border-radius: var(--sp-radius-xl);
    padding: 3rem;
    text-align: center;
    box-shadow: var(--sp-shadow);
  }

  .trust-pop-icon {
    color: var(--sp-mint);
    margin-bottom: 1.25rem;
  }

  .trust-pop-title {
    font-family: var(--sp-font-display);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    letter-spacing: -0.01em;
  }

  .trust-pop-desc {
    font-size: 0.9rem;
    color: var(--sp-text-muted);
    line-height: 1.7;
    max-width: 500px;
    margin: 0 auto 1.5rem;
  }

  .trust-pop-badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .trust-badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.3rem 0.8rem;
    border-radius: var(--sp-radius-full);
    background: var(--sp-mint-light);
    color: var(--sp-mint-dark);
    letter-spacing: 0.01em;
  }

  /* Final CTA */
  .final-pop {
    padding: 5rem 2rem;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .final-pop-container {
    max-width: 500px;
    margin: 0 auto;
  }

  .final-pop-title {
    font-family: var(--sp-font-display);
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 800;
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
  }

  .final-pop-desc {
    font-size: 1rem;
    color: var(--sp-text-muted);
    margin: 0 0 2rem;
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }

    .how-pop-steps {
      flex-direction: column;
      align-items: center;
    }

    .how-pop-connector {
      transform: rotate(90deg);
      padding: 0;
    }

    .hero-pop {
      padding: 3rem 1.5rem 2rem;
    }
  }
</style>
